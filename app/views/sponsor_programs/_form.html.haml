.card
  .card-body
    .form.container
      = simple_form_for(@sponsor_program) do |f|
        = f.error_notification
        .form-inputs
          = f.input :active, as: :radio_buttons, collection: [['true', 'Active'], ['false', 'Non Active']], label_method: :second, value_method: :first, required: true
          .row
            .col
              = f.input :start, as: :date, html5: true
            .col
              = f.input :end, as: :date, html5: true
          .row
            .col
              = f.input :sponsor_id ,:collection => @sponsors,:label_method => :collection_values,:value_method => :id, prompt: "Select Sponsor ID", :label => "Sponsor ID" ,:include_blank => false
            .col
              = f.input :program_id ,:collection => @programs,:label_method => :name,:value_method => :id, prompt: "Select Sponsor's Program", :label => "Sponsor's Program" ,:include_blank => false
        .form-actions
        %br
          .row
            .col
            .col
              -if @sponsor
                = f.button :submit, name: "sponsor_id", value: @sponsor.id, value: "Submit", class: "btn btn-submit btn-lg"
              - elsif @program
                = f.button :submit, name: "program_id", value: @program.id, value: "Submit", class: "btn btn-submit btn-lg"
              - else
                = f.button :submit, class: "btn btn-submit btn-lg"
            .col
