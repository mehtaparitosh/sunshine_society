%h1= "#{@student.st_id}: #{@student.name}"

= link_to "Back", students_path, class: "btn btn-nav"
|
= link_to "Edit", edit_student_path(@student), class: "btn btn-nav"

%hr	

%h4 Coordinators
%small= link_to "Add Coordinator", new_student_coordinator_path(student_id: @student.id)
- @student_coordinators.each do |student_coordinator|
	%p
		= link_to student_coordinator.coordinator.name, coordinator_path(student_coordinator.coordinator_id)
		|
		= student_coordinator.active
		| 
		= link_to "Edit", edit_student_coordinator_path(student_coordinator, student_id: @student.id)
