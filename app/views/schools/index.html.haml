%h1.w3-center SCHOOLS
%br
%small= link_to 'Back', root_path, class: "btn btn-danger btn-sm"
%small= link_to "Add School", new_school_path, class: "btn btn-secondary btn-sm"
%table.table.table-hover.table-bordered{:style => "margin-top: 8px;"}
	%thead.thead-light
		%tr
			%th{:scope => "col"} #
			%th{:scope => "col"} School
			%th{:scope => "col"} Board
			%th{:scope => "col"} Fees Type
			%th{:scope => "col"} Initial Class
			%th{:scope => "col"} Max. Class
			%th{:scope => "col"} Contact Person
			%th{:scope => "col"} Contact No.
	%tbody
		- num = 1
		- @schools.each do |school|
			%tr
				%th{:scope => "row"}= "#{num}"
				%td= link_to school.name, school_path(school)
				%td= school.board
				%td= school.fees_type
				%td= school.initial_class
				%td= school.max_class
				%td= school.contact_person
				%td= school.contact_no
			-num = num+1
