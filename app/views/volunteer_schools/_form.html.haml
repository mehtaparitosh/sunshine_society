.form
  = simple_form_for(@volunteer_school) do |f|
    = f.error_notification
    .form-inputs
      = f.input :active, as: :radio_buttons, collection: [['true', 'Active'], ['false', 'Non Active']], label_method: :second, value_method: :first, required: true
      = f.input :start, as: :date, html5: true
      = f.input :end, as: :date, html5: true
      = f.input :volunteer_id ,:collection => @volunteers,:label_method => :collection_values,:value_method => :id, prompt: "Select Volunteer ID", :label => "Volunteer ID" ,:include_blank => false
      = f.input :school_id ,:collection => @schools,:label_method => :name,:value_method => :id, prompt: "Select School", :label => "School" ,:include_blank => false
    .form-actions
    %br
      -if @volunteer
        = f.button :submit, name: "volunteer_id", value: @volunteer.id, value: "Submit"
      - elsif @school
        = f.button :submit, name: "school_id", value: @school.id, value: "Submit"
      - else
        = f.button :submit
