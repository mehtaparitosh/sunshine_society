= simple_form_for(@student_volunteer) do |f|
  = f.error_notification
  .form-inputs
    = f.input :active, as: :radio_buttons, collection: [['true', 'Active'], ['false', 'Non Active']], label_method: :second, value_method: :first, required: true
    = f.input :student_id ,:collection => @students,:label_method => :st_id,:value_method => :id, prompt: "Select Student ID", :label => "Student ID" ,:include_blank => false
    = f.input :volunteer_id ,:collection => @volunteers,:label_method => :vol_id,:value_method => :id, prompt: "Select Volunteer's ID", :label => "Volunteer's ID" ,:include_blank => false

  .form-actions
  %br
    -if @student
      = f.button :submit, name: "student_id", value: @student.id, value: "Submit"
    - elsif @volunteer
      = f.button :submit, name: "volunteer_id", value: @volunteer.id, value: "Submit"
    - else
      = f.button :submit
