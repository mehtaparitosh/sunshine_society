%h1 Edit Student's School
-if params[:student_id]
	%h4= "#{@student.st_id}: #{@student.name}"
- elsif params[:school_id]
	%h4= "#{@school.name}"
- else
- if params[:student_id]
	= link_to "Cancel", student_path(@student), class: "btn btn-danger btn-sm"
- elsif params[:school_id]
	= link_to "Cancel", school_path(@school), class: "btn btn-danger btn-sm"
%br
%br
= render 'form'
