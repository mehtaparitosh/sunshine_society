%h1 New Mentor for Student
-if params[:student_id] 
	%h4= "#{@student.st_id}: #{@student.name}"
- elsif params[:mentor_id]
	%h4= "#{@mentor.men_id}: #{@mentor.name}"
- else
= render 'form'
- if params[:student_id] 
	= link_to "Cancel", student_path(@student)
- elsif params[:mentor_id]
	= link_to "Cancel", mentor_path(@mentor)