.sponsors
  .form
    = simple_form_for(@sponsor) do |f|
      = f.error_notification
      .form-inputs
        = f.input :name
        = f.input :gender, as: :radio_buttons, collection: [['male', 'Male'], ['female', 'Female']], label_method: :second, value_method: :first, required: true 
        = f.input :dob, as: :date, html5: true
        = f.input :doj, as: :date, html5: true
        = f.input :active, as: :radio_buttons, collection: [['true', 'Active'], ['false', 'Non Active']], label_method: :second, value_method: :first, required: true
        = f.input :dol, as: :date, html5: true
        = f.input :contact
        = f.input :email
        = f.input :address
        / = f.input :city
        / = f.input :state
        = f.input :country, :as => :string
        = f.input :pincode

        / = f.input :program_id ,:collection => @programs,:label_method => :name,:value_method => :id, prompt: "Select Program", :label => "Program" ,:include_blank => false
        = f.input :sponsor_type, as: :radio_buttons, collection: [['SEP', 'SEP'], ['EACH', 'EACH'], ['CEP', 'CEP'], ['general', 'General'], ['emergency fund', 'Emergency Fund']], label_method: :second, value_method: :first, required: true

      .form-actions
        = f.button :submit
