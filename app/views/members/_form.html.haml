.card
  .card-body
    .form.container
      = simple_form_for(@member) do |f|
        = f.error_notification
        .form-inputs
          .row
            .col
              = f.input :name
            .col
              = f.input :gender, as: :radio_buttons, collection: [['male', 'Male'], ['female', 'Female']], label_method: :second, value_method: :first, required: true
            .col
              = f.input :age
            .col
              = f.input :dob, as: :date, html5: true
          .row
            .col
              = f.input :kind, label: "Member Type"
            .col
              = f.input :effective_till, as: :date, html5: true
            .col
              = f.input :voting_right, as: :radio_buttons, collection: [['true', 'Yes'], ['false', 'No']], label_method: :second, value_method: :first, required: true
          .row
            .col
              = f.input :doj, as: :date, html5: true
            .col
              = f.input :active, as: :radio_buttons, collection: [['true', 'Active'], ['false', 'Non Active']], label_method: :second, value_method: :first, required: true
            .col
              = f.input :dol, as: :date, html5: true
          .row
            .col
              = f.input :contact
            .col
              = f.input :email
          = f.input :address
          / = f.input :city
          / = f.input :state
          .row
            .col
              = f.input :country, :as => :string
            .col
              = f.input :pincode

          -# = f.input :active, as: :radio_buttons, collection: [['true', 'Yes'], ['false', 'No']], label_method: :second, value_method: :first, required: true

          / Designation is to be added at the show page
        %br
        .form-actions
          .row
            .col
            .col
              = f.button :submit, class: "btn btn-submit btn-lg"
            .col
